{
  "name": "latexenc",
  "type": "module",
  "version": "1.0.0",
  "description": "TypeScript reimplementation of pylatexenc - LaTeX parser and text converter",
  "author": "Qianhe Chen",
  "license": "MIT",
  "homepage": "https://github.com/chenqianhe/latexenc#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/chenqianhe/latexenc.git"
  },
  "bugs": {
    "url": "https://github.com/chenqianhe/latexenc/issues"
  },
  "keywords": [
    "latex",
